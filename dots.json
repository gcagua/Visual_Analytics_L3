{
  "data": {
    "url": "https://raw.githubusercontent.com/vega/vega-datasets/next/data/movies.json"
  },
  "width": 500,
  "selection": {
    "grid": {"type": "interval", "bind": "scales"},
    "genre_selector": {
      "type": "single",
      "fields": ["Major Genre"],
      "bind": {
        "input": "select",
        "options": [
          null,
          "Action",
          "Adventure",
          "Black Comedy",
          "Comedy",
          "Concert/Performance",
          "Documentary",
          "Drama",
          "Horror",
          "Musical",
          "Romantic Comedy",
          "Thriller/Suspense",
          "Western"
        ],
        "labels": [
          "Todos",
          "Action",
          "Adventure",
          "Black Comedy",
          "Comedy",
          "Concert/Performance",
          "Documentary",
          "Drama",
          "Horror",
          "Musical",
          "Romantic Comedy",
          "Thriller/Suspense",
          "Western"
        ],
        "name": "Major Genre:"
      }
    }
  },
  "transform": [
    {"filter": "datum['IMDB Rating']>= number_selector"},
    {"filter": {"selection": "genre_selector"}}
  ],
  "params": [
    {"name": "Poner_color", "bind": {"input": "checkbox"}},
    {"name": "grid", "select": "interval", "bind": "scales"},
    {"name": "number_selector",
      "value":8,
      "bind": {
        "input": "range",
        "min": 6,
        "max": 9.5,
        "step": 0.5,
        "name": "Puntuaci√≥n IMDB mayor igual a:"
      }
    }
  ],
  "mark": "point",
  "encoding": {
    "x": {"field": "Worldwide Gross", "type": "quantitative"},
    "y": {"field": "Production Budget", "type": "quantitative"},
    "color": {
      "condition": {
        "param": "Poner_color",
        "field": "IMDB Rating",
        "type": "quantitative",
        "scale": {"scheme": "redyellowgreen"}
      },
      "value": "grey"
    },
    "size": {"value": 30}
  },
  "config": {}
}